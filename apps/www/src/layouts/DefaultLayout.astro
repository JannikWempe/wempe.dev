---
import type { ComponentProps } from 'astro/types';
import BaseLayout from './BaseLayout.astro';
import type Metadata from '~/components/Metadata.astro';
import type { BreadcrumbItem } from '~/components/Breadcrumb.astro';

export interface Props {
	metadata: Omit<ComponentProps<typeof Metadata>, 'og'>;
	breadcrumbItems?: BreadcrumbItem[];
}

const { metadata: _metadata, breadcrumbItems = [] } = Astro.props;
const metadata = {
	..._metadata,
	og: {
		type: 'website' as const,
	},
};
---

<BaseLayout {metadata} {breadcrumbItems}>
	<Fragment slot="header">
		<slot name="header" />
	</Fragment>
	<slot />
</BaseLayout>
