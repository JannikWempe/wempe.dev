---
import { Image } from 'astro:assets';
import Layout from '~/layouts/Layout.astro';
import Button from '~/components/ui/Button.astro';
import Endorsements from '~/components/Endorsements.astro';

import { Icon } from 'astro-icon/components';

import portrait from '~/assets/images/jannik-wempe.jpeg';
import BlogPosts from '~/components/BlogPosts.astro';

const endorsements = [
	{
		text: 'Working with them was incredible. Their attention to detail and ability to solve complex problems made our project a success.',
		author: {
			name: 'Sarah Chen',
			social: 'https://x.com/sarahchen',
		},
		role: 'Engineering Manager at TechCorp',
		relation: 'co-worker at Hashnode',
		imageUrl: '/src/assets/images/endorsements/sarah.jpeg',
	},
	{
		text: 'Jannik is one of the smartest engineers I’ve worked with. He deeply understands problems, asks the right questions, and delivers high quality solutions quickly — exactly what a fast-moving startup needs. He’s an invaluable asset to any team.',
		author: {
			name: 'Sandeep Panda',
			social: 'https://x.com/Sandeepg33k',
		},
		role: {
			// object for linked company
			text: 'Co-founder & CTO',
			companyName: 'Hashnode',
			companyUrl: 'https://hashnode.com',
		},
		relation: 'boss at Hashnode',
		imageUrl: '/src/assets/images/endorsements/sandeep-panda.jpeg',
	},
];
---

<Layout>
	<main>
		<div class="relative flex justify-between">
			{/* Background with gradient and pattern */}
			<div class="absolute inset-0 -z-10 bg-gradient-to-br from-blue-100 via-white to-indigo-100">
				<div
					class="absolute inset-0"
					style={{
						backgroundImage: `radial-gradient(circle at 1px 1px, rgb(203 213 225 / 0.5) 1px, transparent 0)`,
						backgroundSize: '24px 24px',
					}}
				>
				</div>
			</div>

			<div class="container mx-auto px-32 py-16">
				<div class="flex justify-between">
					<div>
						<p class="text-md font-bold uppercase tracking-wide text-blue-600">Engineering Value Beyond Code</p>
						<h1 class="mt-1 max-w-lg text-5xl font-bold text-indigo-900">Crafting Full-Stack Solutions That Matter</h1>
						<p class="mt-4 max-w-xl text-lg font-semibold leading-relaxed text-slate-700">
							Drawing from experience across modern web technologies, cloud platforms, and system architecture, I build
							end-to-end solutions that create lasting value. My passion for learning and natural curiosity drive me to
							stay at the forefront of technological innovation.
						</p>
						<Button color="primary" variant="solid" size="lg" class="group mt-8">
							Reach Out
							<Icon
								name="lucide:mail"
								slot="icon-right"
								class="transition-transform group-hover:rotate-12 group-hover:scale-125"
							/>
						</Button>
					</div>

					<div
						class="relative mt-8 h-[12.5rem] w-[12.5rem] before:absolute before:inset-0 before:left-0 before:top-0 before:-z-10 before:block before:h-full before:w-full before:rounded-full before:bg-indigo-900 before:content-['']"
					>
						<div class="h-48 w-48 overflow-hidden rounded-full shadow-lg ring-2 ring-slate-100">
							<Image src={portrait} alt="Portrait of Jannik Wempe" width={192} height={192} loading={'eager'} />
						</div>
					</div>
				</div>
			</div>
		</div>

		<section class="container mx-auto px-32 py-16">
			<h2 class="text-center text-3xl font-bold text-indigo-900">What Others Say</h2>
			<Endorsements {endorsements} class="mt-8" />
		</section>

		<section class="container mx-auto px-32 py-16">
			<h2 class="text-center text-3xl font-bold text-indigo-900">Latest Blog Posts</h2>
			<BlogPosts server:defer limit={3} class="mt-8" />
		</section>
	</main>
</Layout>
