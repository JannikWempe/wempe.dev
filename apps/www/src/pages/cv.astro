import jannikWempeImg from '~/assets/images/jannik-wempe.png';
import Button from '~/components/ui/Button.astro';
import { SITE_BASE_URL } from '~/constants/site';
import {
	BLUESKY_HANDLE,
	BLUESKY_URL,
	EMAIL,
	GITHUB_HANDLE,
	GITHUB_URL,
	LINKEDIN_HANDLE,
	LINKEDIN_URL,
	X_HANDLE,
	X_URL,
