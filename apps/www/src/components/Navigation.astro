---
import { Icon } from 'astro-icon/components';
import { config } from '~/constants/config';

interface Props {
	currentPath: string;
}

const { currentPath } = Astro.props;

const navItems = [
	{ label: 'Home', path: '/' },
	{ label: 'Blog', path: '/blog' },
];
---

<nav class="fixed inset-x-0 top-0 z-50 border-b bg-white/90 backdrop-blur-md">
	<div class="container mx-auto flex h-16 items-center justify-between">
		<!-- Navigation Items -->
		<div class="flex items-center space-x-4">
			{
				navItems.map(({ label, path }) => (
					<a
						href={path}
						class:list={[
							'rounded-md px-3 py-2 text-sm font-medium transition-colors',
							currentPath === path
								? 'bg-slate-100 text-slate-900'
								: 'text-slate-600 hover:bg-slate-50 hover:text-slate-900',
						]}
					>
						{label}
					</a>
				))
			}
		</div>

		<!-- Social Links -->
		<div class="flex items-center gap-5">
			<a
				href={config.social.x}
				target="_blank"
				rel="noopener noreferrer"
				class="plausible-event-name=contact+x plausible-event-name=contact text-slate-600 transition-colors hover:text-slate-800"
			>
				<Icon name="twitter-x" class="h-5 w-5" />
				<span class="sr-only">Twitter/X Profile</span>
			</a>

			<a
				href={config.social.bluesky}
				target="_blank"
				rel="noopener noreferrer"
				class="plausible-event-name=contact+bluesky plausible-event-name=contact text-slate-600 transition-colors hover:text-slate-800"
			>
				<Icon name="bluesky" class="h-5 w-5" />
				<span class="sr-only">Bluesky Profile</span>
			</a>

			<a
				href={config.social.linkedin}
				target="_blank"
				rel="noopener noreferrer"
				class="plausible-event-name=contact+linkedin plausible-event-name=contact text-slate-600 transition-colors hover:text-slate-800"
			>
				<Icon name="lucide:linkedin" class="h-5 w-5" />
				<span class="sr-only">LinkedIn Profile</span>
			</a>

			<a
				href={config.social.github}
				target="_blank"
				rel="noopener noreferrer"
				class="plausible-event-name=contact+github plausible-event-name=contact text-slate-600 transition-colors hover:text-slate-800"
			>
				<Icon name="lucide:github" class="h-5 w-5" />
				<span class="sr-only">GitHub Profile</span>
			</a>

			<a
				href={config.social.hashnode}
				target="_blank"
				rel="noopener noreferrer"
				class="plausible-event-name=contact+hashnode plausible-event-name=contact text-slate-600 transition-colors hover:text-slate-800"
			>
				<Icon name="hashnode" class="h-5 w-5" />
				<span class="sr-only">Hashnode Blog</span>
			</a>

			<a
				href={`mailto:${config.social.email}`}
				class="plausible-event-name=contact+email plausible-event-name=contact text-slate-600 transition-colors hover:text-slate-800"
			>
				<Icon name="lucide:mail" class="h-5 w-5" />
				<span class="sr-only">Email Contact</span>
			</a>
		</div>
	</div>
</nav>
