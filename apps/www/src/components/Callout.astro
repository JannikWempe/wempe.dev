---
import { twMerge } from 'tailwind-merge';

interface Props {
	type: 'info' | 'warning';
	class?: string;
}

const { type, class: classes } = Astro.props;
---

<div
	class={twMerge(
		'my-4 flex gap-3 rounded-lg bg-slate-50 text-slate-800  p-4',
		type === 'warning' && 'bg-yellow-50 text-yellow-800',
		type === 'info' && 'bg-blue-50 text-blue-800',
		classes,
	)}
>
	<div class="flex-shrink-0 text-lg">{type === 'warning' ? '⚠️' : 'ℹ️'}</div>
	<div class="text-[0.95rem] [&>p]:m-0 [&>p+p]:mt-3">
		<slot />
	</div>
</div>
