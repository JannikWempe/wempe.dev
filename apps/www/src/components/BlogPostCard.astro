---
import { Image } from 'astro:assets';

interface Props {
	title: string;
	excerpt: string;
	date: Date;
	url: string;
	cover: string;
}

const { title, excerpt, date, url, cover } = Astro.props;

// Format date to YYYY-MM-DD
const formattedDate = date.toISOString().split('T')[0];
---

<article class="relative">
	<div class="relative aspect-[1600/840] w-full">
		<Image src={cover} alt={title} width={1600} height={840} class="object-cover" />
	</div>
	<div class="mt-4">
		<h2 class="text-2xl font-bold text-gray-900">{title}</h2>
		<time datetime={formattedDate} class="mt-2 block text-gray-600">
			{formattedDate}
		</time>
		<p class="mt-2 line-clamp-2 text-gray-700">{excerpt}</p>
	</div>
	<a href={url} class="absolute inset-0">
		<span class="sr-only">Read more about {title}</span>
	</a>
</article>
