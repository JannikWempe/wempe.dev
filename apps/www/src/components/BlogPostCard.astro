---
import { Image } from 'astro:assets';

interface Props {
	title: string;
	description: string;
	date: Date;
	url: string;
	cover: string;
}

const { title, description, date, url, cover } = Astro.props;

// Format date to YYYY-MM-DD
const formattedDate = date.toISOString().split('T')[0];
---

<article
	class="relative overflow-hidden rounded-lg bg-white shadow-md transition-shadow duration-300 focus-within:ring-4 focus-within:ring-indigo-500 focus-within:ring-offset-4 hover:shadow-lg"
>
	<div class="relative aspect-[1600/840] w-full">
		<Image src={cover} alt={title} width={1600} height={840} class="object-cover" />
	</div>
	<div class="p-4">
		<h2 class="mb-2 text-xl font-semibold">{title}</h2>
		<p class="mb-2 text-sm text-gray-600">{formattedDate}</p>
		<p class="line-clamp-3 text-gray-700">{description}</p>
	</div>
	<a href={url} class="absolute inset-0 active:ring-2 active:ring-indigo-500">
		<span class="sr-only">Read more about {title}</span>
	</a>
</article>
