---
import { Icon } from 'astro-icon/components';
import { twMerge } from 'tailwind-merge';

interface Props {
	url: string;
	title: string;
	class?: string;
}

const { url, title, class: classes } = Astro.props;

// Encode the URL and title for sharing
const encodedUrl = encodeURIComponent(url);
const encodedTitle = encodeURIComponent(title);

const shareLinks = [
	{
		name: 'X',
		url: `https://twitter.com/intent/tweet?url=${encodedUrl}&text=${encodedTitle}`,
		icon: 'twitter-x',
		label: 'Share on X',
	},
	{
		name: 'Bluesky',
		url: `https://bsky.app/intent/compose?text=${encodedTitle}%20${encodedUrl}`,
		icon: 'bluesky',
		label: 'Share on Bluesky',
	},
	{
		name: 'LinkedIn',
		url: `https://www.linkedin.com/sharing/share-offsite/url=${encodedUrl}`,
		icon: 'lucide:linkedin',
		label: 'Share on LinkedIn',
	},
];
---

<div class={twMerge('', classes)}>
	<h3 class="mb-4 text-sm font-semibold text-slate-900">Share this post</h3>
	<div class="flex gap-4">
		{
			shareLinks.map(({ url, icon, label }) => (
				<a
					href={url}
					target="_blank"
					rel="noopener noreferrer"
					class="rounded-md bg-slate-100 p-2 text-slate-600 transition-colors hover:bg-slate-200 hover:text-slate-900"
					aria-label={label}
				>
					<Icon name={icon} class="h-5 w-5" />
					<span class="sr-only">{label}</span>
				</a>
			))
		}
	</div>
</div>
