---
import { Icon } from 'astro-icon/components';

import { config } from '~/constants/metadata';
---

<div
	class="fixed bottom-0 left-0 w-full border-t bg-slate-50/80 p-3 backdrop-blur-md [box-shadow:0_-4px_6px_-1px_rgb(0_0_0_/0.1),0_-2px_4px_-2px_rgb(0_0_0_/0.1)] md:p-4"
>
	<div class="mx-auto flex max-w-screen-xl items-center justify-center gap-6 md:gap-8">
		<a
			href={config.social.x}
			target="_blank"
			rel="noopener noreferrer"
			class="text-slate-600 transition-colors hover:text-slate-800"
		>
			<Icon name="twitter-x" class="h-6 w-6" />
			<span class="sr-only">Twitter/X Profile</span>
		</a>

		<a
			href={config.social.linkedin}
			target="_blank"
			rel="noopener noreferrer"
			class="text-slate-600 transition-colors hover:text-slate-800"
		>
			<Icon name="lucide:linkedin" class="h-6 w-6" />
			<span class="sr-only">LinkedIn Profile</span>
		</a>

		<a
			href={config.social.github}
			target="_blank"
			rel="noopener noreferrer"
			class="text-slate-600 transition-colors hover:text-slate-800"
		>
			<Icon name="lucide:github" class="h-6 w-6" />
			<span class="sr-only">GitHub Profile</span>
		</a>

		<a
			href={config.social.hashnode}
			target="_blank"
			rel="noopener noreferrer"
			class="text-slate-600 transition-colors hover:text-slate-800"
		>
			<Icon name="hashnode" class="h-6 w-6" />
			<span class="sr-only">Hashnode Blog</span>
		</a>

		<a href={`mailto:${config.social.email}`} class="text-slate-600 transition-colors hover:text-slate-800">
			<Icon name="lucide:mail" class="h-6 w-6" />
			<span class="sr-only">Email Contact</span>
		</a>
	</div>
</div>
